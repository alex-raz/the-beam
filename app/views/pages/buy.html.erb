<section class="magazines">
  <h3 class="header">Subscribe Now</h3>
  <div class="body">
    <div class="row">
      <div class="col-xs-12">
        <%= link_to "https://the-beam-magazine.myshopify.com/products/subscribe-now", class: "magazines__wrapper", target: "_blank" do %>
          <div class="magazines__image-container">
            <%= image_tag "buy/image.png", alt: "#buildthebeam" %>
          </div>
          <div class="magazines__text">
            <p class="magazines__text-upper">
              Don't let the energy transition leave you behind.
            </p>
            <p>
              Build The Beam with us
              for only 20 euros.
              <br>
              #buildthebeam
            </p>
            <span class="magazines__like_link">Subscribe now</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section class="testimonial default-link">
  <h3 class="header">What Our Readers Say</h3>
  <div class="body">
    <div class="row">
      <%= render partial: "testimonials/item", collection: @testimonials, as: :testimonial %>
    </div>
  </div>
</section>
